<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    tools:context=".screen.Login">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_dark"
        android:gravity="center_horizontal"
        android:paddingTop="80sp"
        android:text="WeBlog"
        android:textAlignment="center"
        android:textColor="@color/teal_dark"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        tools:layout_editor_absoluteX="24dp">
    </TextView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="136dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp">

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@drawable/profile_user">
        </ImageView>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Email"
            android:backgroundTint="@color/teal_dark"
            android:textColor="@color/black">

        </EditText>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="136dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.218"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp">

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:src="@drawable/padlock">

        </ImageView>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:hint="password"
            android:inputType="textPassword"
            android:backgroundTint="@color/teal_dark"
            android:textColor="@color/black">
        </EditText>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/signupBtn"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="@drawable/signup_button"
        android:text="Login"
        android:textColor="@color/white"
        app:backgroundTint="@color/teal_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout2"
        app:layout_constraintVertical_bias="0.294"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp">

    </Button>

    <TextView
        android:id="@+id/fgtPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="Forgot Password?"
        android:textAlignment="textEnd"
        android:textColor="@color/teal_dark"
        app:layout_constraintBottom_toTopOf="@+id/signupBtn"
        app:layout_constraintTop_toBottomOf="@+id/layout2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Account? Signup"
        android:textAlignment="center"
        android:textColor="@color/teal_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupBtn"
        app:layout_constraintVertical_bias="0.343"
        tools:layout_editor_absoluteX="20dp"
        android:gravity="center_horizontal">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
